.wrapper {
  max-width: 22rem;
  margin-inline: auto;
  padding-inline: 24px;
}

.visually-hidden {
  position: absolute;
  clip: rect(1px, 1px, 1px, 1px);
  padding: 0;
  border: 0;
  height: 1px;
  width: 1px;
  overflow: hidden;
}

[class*="space"] {
  display: grid;
}

.space-lg {
  gap: 1.5rem;
}

.space-sm {
  gap: 0.375rem;
}