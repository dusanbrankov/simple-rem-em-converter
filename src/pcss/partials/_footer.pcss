.site-footer {
  text-align: center;
  padding-block: 3rem 0.75rem;
}

.link-icon {
  display: inline-block;
  line-height: 0;
  margin-bottom: 0.375rem;

  svg {
    fill: var(--color-neutral-03);
    width: 2.125rem;

    &:hover {
      fill: var(--color-neutral-02);
      transition: fill var(--transition);
    }
  }
}

.copyright {
  display: block;
  font-size: 0.75rem;
  color: var(--color-neutral-02);
}
